{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["react", "prettier", "import-helpers"],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "/^next/",
          "/^react/",
          "module",
          "/^@/",
          "/^components/",
          "/^styles/",
          "/^~/",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
  }
}
